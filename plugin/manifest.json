{
  "name": "Relay Auto",
  "description": "Automation Of The Relay Platform Booking",
  "version": "2.0.0",
  "permissions": [
    "tabs",
    "https://relay.amazon.com/tours/loadboard?"
  ],
  "background": {
    "scripts": ["./assets/js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "./assets/icon-off.png",
    "default_popup": "./assets/html/popup.html"
  },
  "manifest_version": 2
}
