{
  "name": "Relay Auto",
  "description": "Automation Of The Relay Platform Booking",
  "version": "2.0.0",
  "permissions": [
    "tabs",
    "https://relay.amazon.com/tours/loadboard?"
  ],
  "icons": {
    "16": "./assets/icons/16-off.png",
    "32": "./assets/icons/32-on.png",
    "128": "./assets/icons/128-on.png"
  },
  "background": {
    "scripts": ["./assets/js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "./assets/html/popup.html"
  },
  "manifest_version": 2
}
